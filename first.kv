			size:self.size
			pos:self.pos
			radius:[15]	
		
	GridLayout:
		id:Cgrid
		cols:3
		rows:1			
		size_hint_y:None
		height:(self.minimum_height)	
		Label:
			id:name
			markup:True
			valign:"center"
			text:"Task Name"
			color:(0,0,0,1)
			text_size:self.width,None
			size_hint_y:None
			height:self.texture_size[1]
		Label:
			id:scr
			markup:True
			valign:"center"
			text:"Score"
			color:(0,0,0,1)
			text_size:self.width,None
			size_hint_y:None
			size_hint_x:.5
			height:self.texture_size[1]
		Label:
			id:tid
			markup:True
			valign:"center"
			text:"[b]Id: [/b]12"
			color:(0,0,0,1)
			text_size:self.width,None
			size_hint_x:.5
			size_hint_y:None
			height:self.texture_size[1]	

	Label:
		id:decs
		markup:True
		text:str("Description  "*10)
		color:(0,0,0,1)
		text_size:self.width,None
		size_hint_y:None
		height:self.texture_size[1]
	GridLayout:
		cols:2
		rows:1
		size_hint_y:None
		height:self.minimum_height
		Label:
			id:cooldown
			markup:True
			halign:"center"
			text:"CoolDown: +- time"
			color:(1,0.4,0.7,1)
			text_size:self.width,None
			size_hint_y:None
			height:self.texture_size[1]
		Label:
			id:state
			markup:True
			halign:"center"
			text:"N/A [b]Completed[/b]"
			color:(0,1,0,1)
			text_size:self.width,None
			size_hint_y:None
			height:self.texture_size[1]
	FloatLayout:
		id:Cfloat
		size_hint_y:None
		height:510
		ScrollView:
			id:Cscroll
			size_hint_y:None
			pos_hint:{'x':0,'y':0}
			size:self.parent.size
			pos:self.parent.pos
