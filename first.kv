<CustomBoxLayout>:
	canvas.before:
		Color:
			rgba:0,0,0,0.5
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[25]		
	id:Cbox
	size_hint:(1,None)
	height:(self.minimum_height+1)
	orientation:"vertical"
	canvas.before:
		Color:
			rgba:1,1,1,1
